# Environment variables and other exported variabled.
#

# 
# GO Environment variables.
#
export GOROOT=$HOME/softwares/Languages/go
export GOPATH=$HOME/projects/personal/go-workspace


# Gradle path.
export GRADLE_HOME=$HOME/softwares/Tools/gradle-2.9

# Nodejs path.
NODEJS_BIN_PATH=$HOME/softwares/Languages/node/bin

#Android SDK
ANDROID_HOME=$HOME/Android/Sdk
ANDROID_BIN=$ANDROID_HOME/platform-tools:$ANDROID_HOME/tools

#
# Export the updated system path.
#
export PATH=$GOROOT/bin:$GOPATH/bin:$NODEJS_BIN_PATH:$GRADLE_HOME/bin:$ANDROID_BIN:$PATH

